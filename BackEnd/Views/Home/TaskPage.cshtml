@{
    ViewData["Title"] = "Tasks Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/taskPageStyle.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
    <div id="task-edit-btn" class="fa-solid fa-pencil" draggable="false"></div>
    <div id="task-delete-btn" class="fa-solid fa-eraser" draggable="false"></div>

    <div id="task-wrapper">
        <h1 id="task-type" class="active"></h1>
        <h2 id="task-description" class="active"></h2>

        <input type="text" id="task-type-edit-input" />
        <input type="text" id="task-description-edit-input" />
    </div>

    <h2 id="time-frame"></h2>

    <table id="class-table"></table>

    <div id="day-title-wrapper">
        <div class="arrow fa-solid fa-arrow-left"></div>

        <div id="day-title-dropdown-menu-wrapper">
            <h1 id="day-title"></h1>
            <div id="day-title-dropdown-menu">
                <div class="day-title-dropdown-menu-item">
                    <h1></h1>
                </div>

                <div class="day-title-dropdown-menu-item selected" id="morning-shift-btn">
                    <h1>Morning</h1>
                </div>

                <div class="day-title-dropdown-menu-item" id="noon-shift-btn">
                    <h1>Noon</h1>
                </div>
            </div>
        </div>
        <div class="arrow fa-solid fa-arrow-right"></div>
    </div>


    <template id="class-row-template">
        <tr class="class-row" data-time-frame="">
            <td class="class-number"></td>
            <td class="class-name"></td>
        </tr>
    </template>
    <script type="module" src="~/js/taskPageLogic.js"></script>
</body>

</html>